{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{%- macro button(params) -%}
<button class="button button-{{params.classes}}" {{ params.attributes | safe}}>
  {% if params.icon %}{{icon_svg({"name": params.icon})}}
  {% endif %}
  {%- if params.text -%}
  {{ params.text }}
  {%- endif -%}
  {% if params.srOnly %}<span class="sr-only">{{ params.srOnly }}</span>{% endif %}
</button>
{%- endmacro -%}
